{
    "specifications": {
        "ministry": "Auswärtiges Amt",
        "emails": {
            "datenschutzbeauftragter": "Gast@opendataprocess.onmicrosoft.com",
            "pressereferat": "Gast@opendataprocess.onmicrosoft.com"
        }
    },
    "fields": {
        "responsible": {
            "label": "Person responsible",
            "type": "string",
            "info": ""
        }
    },
    "modules": {
        "describe-dataset": {
            "name": "Datensatz beschreiben",
            "description": "Zum Start einer neuen Bereitstellung geben Sie dem Datensatz einen treffenden Titel und eine beschreiben Sie den Inhalt in kurzen und prägnant. Laden Sie im nächsten Schritt die einzelnen Dateien, die zum Datensatz gehören, hoch und beschreiben diese.",
            "fields": {
                "title": {
                    "label": "Titel",
                    "type": "string",
                    "placeholder": "z. B. Protokolldaten 2020",
                    "info": "",
                    "mandatory": true
                },
                "description": {
                    "label": "Beschreibung",
                    "type": "string-long",
                    "placeholder": "Beschreiben Sie kurz den Inhalt des Datensatzes.",
                    "info": "",
                    "mandatory": true
                },
                "data-provider": {
                    "label": "Datenbereitsteller",
                    "type": "string",
                    "prefill": "$specifications.ministry",
                    "info": "",
                    "mandatory": true
                },
                "categories": {
                    "label": "Kategorien",
                    "type": "multi-select",
                    "options": [
                        "Bevölkerung und Gesellschaft", "Energie", "Internationale Themen", "Landwirtschaft, Fischerei, Forstwirtschaft & Nahrungsmittel",
                        "Regionen und Städte", "Wissenschaft und Technologie", "Justiz, Rechtssystem und öffentliche Sicherheit", "Bildung, Kultur und Sport",
                        "Gesundheit", "Verkehr", "Regierung und öffentlicher Sektor", "Umwelt", "Wirtschaft und Finanzen"
                    ],
                    "info": ""
                },
                "tags": {
                    "label": "Schlagwörter",
                    "type": "tag-picker",
                    "options": [],
                    "placeholder": "Mit welchen Wörter würde man nach dem Datensatz suchen?",
                    "info": ""
                }
            }
        },
        "prepare-data": {
            "name": "Prepare Data",
            "description": "Check if the data meets the standards for open publication, e.g. spell out internal abbreviations",
            "fields": {
                "preparedness": {
                    "label": "Is the data prepared?",
                    "type": "boolean",
                    "info": ""
                }
            }
        },
        "publish-data": {
            "name": "Publish Data",
            "description": "The data needs to be permanently and publicly accessible via an URL",
            "fields": {
                "ref": "responsible",
                "url": {
                    "label": "URL to published data",
                    "type": "string",
                    "info": ""
                },
                "url-accessibility": {
                    "label": "Is the URL publicly accessible?",
                    "type": "boolean",
                    "info": "If unsure, see if you can download it when opening the URL in an incognito browser window while being connected through a mobile hotspot"
                }
            }
        },
        "license": {
            "name": "Determine license",
            "description": "The appropriate license has to be chosen.",
            "fields": {
                "ref": "responsible"
            }
        }
    },
    "processes": [
        {
            "id": "GuidoAA",
            "name": "Open Data Process Guide AA",
            "description": "The process of publishing Open Data in the Federal Foreign Office",
            "modules": [
                "describe-dataset",
                "publish-data",
                "license"
            ]
        }
    ]
}
